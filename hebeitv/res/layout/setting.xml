<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="20dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="32dp"
        android:padding="10dp" >

        <TextView
            android:id="@+id/tv_textBig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/sb_settingProgress"
            android:layout_alignTop="@+id/ll_yangshi"
            android:layout_marginRight="30dp"
            android:gravity="center_vertical"
            android:text="字体大小"
            android:textColor="@color/black"
            android:textSize="21sp"
            android:textStyle="bold" />

        <SeekBar
            android:id="@+id/sb_settingProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_yangshi"
            android:layout_toRightOf="@+id/tv_textBig"
            android:max="2"
            android:progress="1"
            android:progressDrawable="@color/black" />

        <LinearLayout
            android:id="@+id/ll_yangshi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-8dp"
            android:layout_toRightOf="@+id/tv_textBig"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="小"
                android:textColor="@color/black"
                android:textSize="@dimen/testSize_small_17sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="0dp"
                android:text="正常"
                android:textColor="@color/black"
                android:textSize="@dimen/testSize_middle_17sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="大"
                android:textColor="@color/black"
                android:textSize="@dimen/testSize_big_17sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="#A3AAB2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="21dp"
        android:orientation="horizontal"
        android:padding="14dp" >

        <TextView
            android:id="@+id/tv_openPush"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="开启推送"
            android:textColor="@color/black"
            android:textSize="21sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/cb_openPush"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/check_box"
            android:paddingRight="5dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="#A3AAB2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="21dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:gravity="center"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:text="退出登录"
            android:textColor="@color/white" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="#A3AAB2" />

</LinearLayout>