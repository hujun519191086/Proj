<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <WebView
        android:id="@+id/tv_center_detail_web"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="#FFE4E4E4"
        android:orientation="horizontal"
        android:paddingLeft="20dp" >

        <EditText
            android:id="@+id/tv_center_detail_input"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:background="@drawable/whit_circel_"
            android:hint="我的评论"
            android:paddingLeft="2dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_center_detail_totalComent"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="2dp"
            android:drawableRight="@drawable/pinglun"
            android:gravity="center_vertical"
            android:text="123"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_center_detail_shoucang"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shoucang" />
    </LinearLayout>

</LinearLayout>