<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_personcenter_top_pic"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:src="@drawable/person_upbg" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_myread_btn"
                style="@style/person_button_style"
                android:drawableLeft="@drawable/yuedu"
                android:text="我的阅读" />

            <TextView
                style="@style/common_line_gray"
                android:layout_marginLeft="60dp" />

            <TextView
                android:id="@+id/tv_hotreg_btn"
                style="@style/person_button_style"
                android:drawableLeft="@drawable/remingtuijian"
                android:text="热门推荐" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/common_bg" />

            <TextView
                android:id="@+id/tv_myUpload_btn"
                style="@style/person_button_style"
                android:drawableLeft="@drawable/shangchuan"
                android:text="我的上传" />

            <TextView
                style="@style/common_line_gray"
                android:layout_marginLeft="60dp" />

            <TextView
                android:id="@+id/tv_collection_btn"
                style="@style/person_button_style"
                android:drawableLeft="@drawable/guanzhu"
                android:text="我的收藏" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/common_bg" />

            <TextView
                android:id="@+id/tv_my_setting"
                style="@style/person_button_style"
                android:drawableLeft="@drawable/shezhi"
                android:text="我的设置" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>