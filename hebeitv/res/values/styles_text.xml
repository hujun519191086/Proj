<resources>

    <!-- 本台节目 -->
    <style name="program_item_font">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">2dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="login_llbg_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/huisekuang</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">1dp</item>
    </style>

    <style name="login_iamgebtn_style">
        <item name="android:layout_margin">1dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/color_f0f2f5</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="login_eidt_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">16dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">#CCCCCC</item>
    </style>

    <style name="login_graytext_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/common_textsize_37px</item>
        <item name="android:textColor">#FFA4AAB2</item>
    </style>

    <style name="common_line_gray">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/color_dee1e6</item>
    </style>

    <style name="common_button_style">
        <item name="android:layout_width">190dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/color_f14100</item>
        <item name="android:textSize">@dimen/common_textsize_37px</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="person_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:drawableRight">@drawable/jiantou</item>
        <item name="android:textSize">@dimen/common_textsize_34px</item>
        <item name="android:textColor">@color/color_828282</item>
    </style>

</resources>