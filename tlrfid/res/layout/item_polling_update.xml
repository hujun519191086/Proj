<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp" >

    <TextView
        android:id="@+id/item_polling_create_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
       
        android:textColor="#000000"
        android:textSize="@dimen/textSize_30" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >

        <CheckBox
            android:layout_marginLeft="5dp"
            android:id="@+id/item_polling_create_isqualify"
            style="@style/myCheckBoxTheme"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
         >

        <CheckBox
            android:layout_marginLeft="5dp"
            android:id="@+id/item_polling_create_ismistake"
            style="@style/myCheckBoxTheme"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_polling_create_reason"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        
        android:textColor="#000000"
        android:textSize="@dimen/textSize_30" />
    
    
     <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center" >

        <CheckBox
            android:id="@+id/item_polling_create_isok"
            style="@style/myCheckBoxTheme"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </LinearLayout>

</LinearLayout>