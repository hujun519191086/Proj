<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:background="@android:color/transparent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_item_warehorse_assetsCode"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="1dp"
        android:layout_weight="4"
        android:background="#FF8EB4E3"
        android:gravity="center"
        android:text="资产编码"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_item_warehorse_assetNameName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="1dp"
        android:layout_weight="1.5"
        android:background="#FF8EB4E3"
        android:gravity="center"
        android:text="资产名称"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_item_warehorse_factoryName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="1dp"
        android:layout_weight="2.5"
        android:background="#FF8EB4E3"
        android:gravity="center"
        android:text="购置日期"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_item_warehorse_modelName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="1dp"
        android:layout_weight="1"
        android:background="#FF8EB4E3"
        android:gravity="center"
        android:text="使用年限"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_item_warehorse_personName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="1dp"
        android:layout_weight="1.5"
        android:background="#FF8EB4E3"
        android:gravity="center"
        android:text="上次养护日期"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_item_warehorse_conserveTypeName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="1dp"
        android:layout_weight="2"
        android:background="#FF8EB4E3"
        android:gravity="center"
        android:text="下次养护日期"
        android:textColor="@color/black" />

</LinearLayout>