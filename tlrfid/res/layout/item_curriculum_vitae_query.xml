<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/curriculum_vitae_query_selector"
    android:orientation="horizontal"
    android:padding="20dp" >

    <ImageView
        android:id="@+id/item_curriculum_vitae_query_iv_show"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/item_curriculum_vitae_query_default_pic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/project_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="工程名称：天使计划"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="负责人：强"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="时间：2014-8-17"
            android:textColor="#000000"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_curriculum_vitae_query_tv_show"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="10dp"
        android:background="#40000000"
        android:gravity="center"
        android:text="2014-8-17"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:visibility="gone" />

</LinearLayout>