<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/projectmanager_left_list_background"
    android:orientation="vertical"
    android:paddingLeft="@dimen/main_content_marginLeft"
    android:paddingRight="@dimen/main_content_marginRight" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="177dp"
        android:layout_marginTop="@dimen/main_content_marginTop"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/main_content_title_background"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/main_content_text_paddingLeft"
            android:text="安全巡检  巡检时间:  2014/8/10  9:00-12:00  巡检人:李XX" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="@dimen/main_content_marginBottom"
            android:background="@drawable/main_content_stroke"
            android:cacheColorHint="#00000000"
            android:clickable="false" >
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:background="@drawable/curriculumvitae_ll_bg"
        android:orientation="horizontal"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/projectmessage_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    style="@style/projectmanager_text"
                    android:text="工程名称" />

                <TextView style="@style/projectmanager_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    style="@style/projectmanager_text"
                    android:text="工程地点" />

                <TextView style="@style/projectmanager_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    style="@style/projectmanager_text"
                    android:text="项目部编号" />

                <TextView style="@style/projectmanager_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    style="@style/projectmanager_text"
                    android:text="项目经理" />

                <TextView style="@style/projectmanager_text" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    style="@style/projectmanager_text"
                    android:text="承建单位:" />

                <TextView style="@style/projectmanager_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    style="@style/projectmanager_text"
                    android:text="关键人员列表:" />

                <TextView style="@style/projectmanager_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView style="@style/projectmanager_text" />

                <TextView style="@style/projectmanager_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    style="@style/projectmanager_text"
                    android:text="电话:" />

                <TextView style="@style/projectmanager_text" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/main_content_title_background"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/main_content_text_paddingLeft"
        android:text="质量巡检    巡检时间: 2014XXXXXXXXXXXXXXXXXXXXXXX" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/main_content_stroke"
        android:cacheColorHint="#00000000"
        android:clickable="false" >
    </ListView>

</LinearLayout>