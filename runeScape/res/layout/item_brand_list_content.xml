<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:paddingBottom="14dp"
    android:paddingLeft="7dp"
    android:paddingRight="7dp"
    android:paddingTop="2dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_brandDetail_content_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:gravity="center_vertical"
            android:textColor="#FF000000"
            android:textSize="16.5sp" />

        <TextView
            android:id="@+id/tv_brandDetail_content_sale"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:textColor="@color/red"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/tv_brandDetail_content_detail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:textColor="#999999"
            android:textSize="13sp" />

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="26dp"
            android:layout_gravity="center"
            android:layout_marginRight="11dp" >

            <Button
                android:id="@+id/bt_brandDetail_content_compair"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/compair_btn_background"
                android:text="+ 对比"
                android:textColor="#395899"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/bt_brandDetail_content_addOne"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/add_compare"
                android:textColor="#395899"
                android:visibility="invisible" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical" >

            <Button
                android:id="@+id/bt_brandDetail_content_ask"
                android:layout_width="82dp"
                android:layout_height="26dp"
                android:clickable="false"
                android:background="@drawable/title_color"
                android:text="团购更便宜"
                android:textColor="@color/white"
                android:textSize="13sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>