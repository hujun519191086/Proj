<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="app_theme" parent="android:Theme.NoTitleBar">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="Global">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="TitleText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="TitleTextWithIcon">
        <item name="android:textSize">@dimen/text_main</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="LinearHorizontal" parent="Global">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LinearVertical" parent="Global">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Seperator" parent="Global">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="EditText" parent="Global">
        <item name="android:textColor">@color/text_main</item>
        <item name="android:textSize">@dimen/text_main</item>
        <item name="android:padding">10dp</item>
        <!-- <item name="android:background">@drawable/edit_text_background</item> -->
    </style>

    <style name="EditTextLogin" parent="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:autoText">false</item>
        <item name="android:capitalize">none</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/text_main</item>
        <!-- <item name="android:background">@drawable/edit_text_background</item> -->
    </style>

    <style name="ButtonLogin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!-- <item name="android:background">@drawable/button_blue_background</item> -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_main</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="MainText">
        <item name="android:textSize">@dimen/text_main</item>
        <item name="android:textColor">@color/text_main</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="SubText">
        <item name="android:textSize">@dimen/text_sub</item>
        <item name="android:textColor">@color/text_sub</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="MainTitleText">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">4</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/main_titleText</item>
    </style>

    <style name="SettingButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_setting_height</item>
        <item name="android:background">@drawable/setting_selector</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingTop">5dp</item>  
        <item name="android:paddingBottom">5dp</item>  
        <item name="android:paddingLeft">10dp</item>  
        <item name="android:drawablePadding">15dp</item>
    </style>

    <style name="brandTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/carType_titleTextSize</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>